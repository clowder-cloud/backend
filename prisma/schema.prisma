generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Privacy {
  PUBLIC
  FRIENDS
  PRIVATE
}

model User {
  id       String @unique @default(cuid())
  username String @unique

  requested_privacy Privacy @default(PUBLIC)

  devices Device[]
  cats    Cat[]

  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
}

model Device {
  id String @unique @default(cuid())

  name String @default("GPS Device")
  uuid String @unique @default(uuid())

  owner    User?   @relation(fields: [owner_id], references: [id])
  owner_id String?

  cat Cat?

  last_pulse_at    DateTime?
  /// [LastLocation]
  last_location    Json      @default("{}")
  /// [LocationHistory]
  location_history Json      @default("[]")

  updated_at DateTime @updatedAt
  created_at DateTime @default(now())
}

model Cat {
  id String @unique @default(cuid())

  name        String?
  description String?
  picture_url String?

  device    Device? @relation(fields: [device_id], references: [id])
  device_id String? @unique
  owner     User?   @relation(fields: [owner_id], references: [id])
  owner_id  String

  battle_profile BattleProfile?

  updated_at      DateTime @updatedAt
  created_at      DateTime @default(now())
  battleProfileId String?
}

model BattleProfile {
  id String @unique @default(cuid())

  level Int @default(1)
  xp Int @default(0)
  wins Int @default(0)
  losses Int @default(0)

  cat   Cat @relation(fields: [cat_id], references: [id])
  cat_id String  @unique
}
